<p id="notice"><%= notice %></p>

<h1><%= fa_icon "newspaper-o" %> NEWSFEED </h1>


  <div class="row">
    <div id="newsfeed" class="col-lg-6">
      <div id="tweetfeed">
          <% @tweets.each do |tweet| %>

              <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                  <div class="well" text-align:"center">
                    <%= image_tag current_user.avatar.url, size:35, class: "user-pic-nav", style:"border-radius:50%"  %>
                    <%= tweet.user.username %> says:
                    <div id="content">  <%= tweet.message %></div>
                    <div class="pull-right">  <%= link_to 'Show', tweet %>
                      <%= link_to 'Edit', edit_tweet_path(tweet) %>
                      <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-3"></div>
          <%end%>
        </div>
      </div>
    </div>


<br>

<%= link_to 'New Tweet', new_tweet_path %>
